{
    "type": "object",
    "javaType": "org.serverless.workflow.api.states.DefaultState",
    "javaInterfaces": ["org.serverless.workflow.api.interfaces.State"],
    "description": "Default State",
    "properties": {
        "id": {
            "type": "string",
            "description": "State unique id",
            "minLength": 1
        },
        "name": {
            "type": "string",
            "description": "State name",
            "minLength": 1
        },
        "type": {
            "type" : "string",
            "enum": ["EVENT", "OPERATION", "SWITCH", "DELAY", "PARALLEL", "END"],
            "description": "State type",
            "format": "validstatetype"
        },
        "start": {
            "type": "boolean",
            "default": false,
            "description": "Is the start event"
        },
        "filter": {
            "$ref": "../filters/filter.json"
        },
        "entry-action": {
            "$ref": "../actions/action.json"
        },
        "exit-action": {
            "$ref": "../actions/action.json"
        },
        "metadata": {
            "$ref": "../metadata/metadata.json"
        }
    },
    "required": ["name", "type", "start"]
}